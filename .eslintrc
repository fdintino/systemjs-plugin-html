{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [2, 2],
        "linebreak-style": ["error", "unix"],
        "quotes": [2, "single"],
        "valid-jsdoc": 0,
        "brace-style": [1, "1tbs", { "allowSingleLine": true }],
        "no-constant-condition": 1,
        "no-underscore-dangle": 0,
        "no-use-before-define": 1,
        "func-names": 0,
        "semi": [2, "always"],
        "no-new": 0,
        "new-parens": 2,
        "no-ternary": 0,
        "new-cap": 0,
        "no-unused-vars": [1, {"vars": "local", "args": "none"}],
        "one-var": 0,
        "space-infix-ops": 0,
        "strict": 0,
        "camelcase": [2, {"properties": "never"}]
    }
}
